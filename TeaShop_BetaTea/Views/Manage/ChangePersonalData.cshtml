@{
    ViewBag.Title = "";
}

<div class="container mt-3">
    <h2 class="text-center">Изменение личных данных</h2>
    <hr />
    <div class="centered">
        @using (Html.BeginForm("ChangePersonalData", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
            <div class="form-group">
                <label class="col-form-label centered" for="street"><h4>Улица</h4></label>
                <div class="col-xs-6 col-xs-offset-3">
                    <input value="@ViewBag.Street" required type="text" class="form-control centered text-center" name="Street" id="street" placeholder="" title="Введите ваш телефон">
                </div>
            </div>
            <div class="form-group ml-3 mr-3">
                <label class="col-form-label centered" for="house"><h4>Дом</h4></label>
                <div class="col-xs-6 col-xs-offset-3">
                    <input value="@ViewBag.House" required type="text" class="form-control centered text-center" name="House" id="house" placeholder="" title="Введите ваш телефон">
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label centered" for="apartament"><h4>Квартира</h4></label>
                <div class="col-xs-6 col-xs-offset-3">
                    <input value="@ViewBag.Apartament" required type="text" class="form-control centered text-center" name="Apartament" id="apartament" placeholder="" title="Введите ваш телефон">
                </div>
            </div>
            </div>
            <div class="form-group">
                <label class="col-form-label centered" for="name"><h4>Имя</h4></label>
                <div class="centered">
                    <input value="@ViewBag.Name" required type="text" class="form-control centered text-center" name="Name" id="name" placeholder="" title="Введите ваш телефон">
                </div>
            </div>
            <div class="centered">
                <input type="submit" value="Изменить данные" class="btn btn-dark" />
            </div>
        }
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}