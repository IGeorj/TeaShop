@model TeaShop_BetaTea.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="container mt-3">
<h2 class="text-center">@ViewBag.Title</h2>
    <div class="centered">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Создание новой учетной записи</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "centered" })
            <div class="col-xs-6 col-xs-offset-3 centered">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "centered" })
            <div class="col-xs-6 col-xs-offset-3 centered">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "centered" })
            <div class="col-xs-6 col-xs-offset-3 centered">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="centered">
                <input type="submit" class="btn btn-outline-dark" value="Регистрация" />
        </div>
    }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
