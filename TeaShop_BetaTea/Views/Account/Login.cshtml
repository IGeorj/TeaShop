@using TeaShop_BetaTea.Models
@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}
<div class="container mt-3">
    <h2 class="text-center">@ViewBag.Title</h2>
    <div class="row centered">
        <div class="">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="centered">Используйте для входа свою учетную запись</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "centered" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger centered mb-2" })
                        <div class="row centered">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "centered" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger centered mb-2" })
                        <div class="row centered">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="centered">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="centered">
                            <input type="submit" value="Вход" class="btn btn-outline-dark" />
                    </div>
                    <p class="centered mt-3">
                        @Html.ActionLink("Регистрация нового пользователя", "Register")
                    </p>
                    @* Включите, когда будет включено подтверждение учетной записи для функции сброса пароля
                        <p>
                            @Html.ActionLink("Забыли пароль?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
        @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
